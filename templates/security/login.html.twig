{% extends 'base.html.twig' %}

{% block title %}Login!{% endblock %}

{% block body %}

    <!-- Form login -->
    <form method="post" class="text-center border border-light p-5">
        {% if error %}
            <aside class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</aside>
        {% endif %}
        <h1 class="h4 mb-4">Sign in</h1>

        <!-- Email -->
        <input type="email" class="form-control mb-4" placeholder="E-mail">

        <!-- Password -->
        <input type="password" class="form-control mb-4" placeholder="Password">

        <div class="d-flex justify-content-around">
            <div>
                <!-- Remember me -->
                <div class="custom-control custom-checkbox">
                    <input type="checkbox" class="custom-control-input" id="defaultLoginFormRemember">
                    <label class="custom-control-label" for="defaultLoginFormRemember">Remember me</label>
                </div>
            </div>
            <div>
                <!-- Forgot password -->
                <a href="">Forgot password?</a>
            </div>
        </div>

        <!-- Sign in button -->
        <button class="btn btn-wm btn-block my-4" type="submit">Sign in</button>

        <!-- Register -->
        <p>Not a member?
            <a href="">Register</a>
        </p>

        <!-- Social login -->
        <p>or sign in with:</p>

        <a type="button" class="light-blue-text mx-2">
            <i class="fa fa-facebook"></i>
        </a>
        <a type="button" class="light-blue-text mx-2">
            <i class="fa fa-twitter"></i>
        </a>
        <a type="button" class="light-blue-text mx-2">
            <i class="fa fa-linkedin"></i>
        </a>
        <a type="button" class="light-blue-text mx-2">
            <i class="fa fa-github"></i>
        </a>

    </form>
    <!-- Form login -->

{% endblock %}
