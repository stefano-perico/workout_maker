{% extends 'base.html.twig' %}
{% block title %}Workout{% endblock %}

{% block body %}
    <section class="card">
            <article class="view" >
                <img src="
                {% if workout.imageName %}
                    {{ vich_uploader_asset(workout, 'imageFile') | imagine_filter('medium')}}
                {% else %}
                    {{ asset('images/workouts/default.jpg') }}
                {% endif %}
                " class="card-img-top" alt="workout's image">
                <aside class="mask d-flex align-items-end rgba-black-light">
                    <div class="ml-4 white-text">
                        <h2 class="font-weight-bold">
                            {{ workout.name }}
                            <span class="ml-2">
                                <!-- TODO add popularity <i class="fa fa-star orange-text-wm"> </i>-->
                            </span>
                        </h2>
                        <p>
                            By : <strong>{{ workout.user.email }}</strong> <br>
                            {{ workout.publishedAt | ago }}
                        </p>
                    </div>
                </aside>
            </article>

        <!-- Workout section -->
            <article class="card-body elegant-color white-text">
                <h3 class="mb-3">Description</h3>
                <p class="mb-0">{{ workout.description }}</p>

                <hr class="hr-wm">

                <h3 class="mb-3">Exercises</h3>

                {% for exercise in workout.exercises %}
                    <aside class="media d-flex align-items-center wm-exercise my-2">
                        <img class="mr-3" src="https://mdbootstrap.com/img/Photos/Others/placeholder1.jpg" alt="Generic placeholder image">
                        <div class="">
                            <h5><a class="white-text" href="{{ path('app_exercise_show', {'slug': exercise.exerciseName.slug }) }}">{{ exercise.exerciseName.exercise }} <strong>{{ exercise.reps }}x 15</strong></a></h5>
                        </div>
                    </aside>
                {% endfor %}

                <hr class="hr-wm">
            </article>

        <!-- /Workout section -->
    </section>
{% endblock %}
